\NeedsTeXFormat{LaTeX2e} %chktex 44
\ProvidesPackage{cref-setup}

\RequirePackage[french, nameinlink]{cleveref}

% Cross-ref by title
\newcommand*\reftitle[1]{% {label}
  \enquote{\titleref{#1}}}
\newcommand*\creftitle[1]{% {label}
  \namecref{#1}~\reftitle{#1}}

% Cross-ref while managing manually the citation name
\ExplSyntaxOn
\NewDocumentCommand \nref { O{\namecref{#2}} m } {
  \hyperref [#2] {
    #1 \nobreakspace \ref*{#2}
    \bool_if:nT {\l_chthesis_print_bool && \l_chthesis_url_showpage_bool} {
      \raisebox {0.8ex}
        { \scriptsize\lfstyle |p. \pageref*{#2}| }
    }
  }
}
\ExplSyntaxOff
